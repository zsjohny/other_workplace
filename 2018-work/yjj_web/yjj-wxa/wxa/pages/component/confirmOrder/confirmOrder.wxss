/*确认订单 */
.wrap{
  height: auto;
  overflow: hidden;
  padding-bottom: 128rpx;
}
.order-mod{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  padding: 0 24rpx;
  border-bottom: 2rpx solid #f4f4f4;
  position: relative;
  overflow: hidden
}
.order-mod .l{
  float: left;
}
.order-mod .r{
  float: right;
  font-size: 24rpx;
  color: #848484;
}
.order-mod .r .explain{
  font-size: 22rpx;
  color: #cacaca;
}
.order-mod .arrow-margin{
  padding-right: 20rpx;
}
.order-mod .ft-red{
  font-size: 30rpx;
}
.no-boder-bottom{
  border-bottom:none;
}
.arrow-mod{
  position: relative;
}
.arrow-mod::after{
  content: '';
  position:absolute;
  right:4rpx;
  top:50%;
  width:44rpx;
  height:44rpx;
  background:url(http://mini-img-main.oss-cn-hangzhou.aliyuncs.com/icon/3.7.7/arrow-icon.png) no-repeat;
  background-size:44rpx;
  margin-top: -22rpx;
}
.order-mod-border{
  border-bottom: 20rpx solid #f4f4f4;
}
/*地址*/
.order-address{
  overflow: hidden;
  font-size: 30rpx;
  position: relative;
  padding: 24rpx 80rpx 34rpx 75rpx;
}
.address-border{
  width: 750rpx;
  height: 11rpx;
  overflow: hidden;
  background: url(http://mini-img-main.oss-cn-hangzhou.aliyuncs.com/icon/new/address-line.png) no-repeat;
  background-size: 750rpx;
  position: absolute;
  left: 0;
  bottom: 0;
}
.edit-address{
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 80rpx 0 75rpx;
}
.order-address::before{
  content: '';
  position: absolute;
  top: 50%;
  left: 24rpx;
  width: 45rpx;
  height: 45rpx;
  background:url(http://mini-img-main.oss-cn-hangzhou.aliyuncs.com/icon/new/address-icon.png) no-repeat;
  background-size:45rpx;
  margin-top: -23rpx;
}
.order-address .name-mod{
  width: 600rpx;
  height: 40rpx;
  line-height: 40rpx;
}
.order-address .name-mod .name{
  font-size: 30rpx;
  margin-right:55rpx;
  float: left;
}
.order-address .name-mod .phone{
  float: right;
  font-size: 26rpx;
}
.order-address .address{
  width: 600rpx;
  line-height: 1.5;
  color: #848484;
  font-size: 24rpx;
  padding-top: 6rpx;
}
.order-mod .remark{
  width: 520rpx;
  height: 84rpx;
  display:inline-block;
  line-height:84rpx;
  margin-left: 20rpx;
}
.remark-color{
  color: #cacaca;
  font-size: 24rpx;
}
/*订单商品模块*/
.order-product{
  height: auto;
  overflow: hidden;
}
.order-product .list-box{
  height: auto;
  overflow: hidden;
  border-bottom: 2rpx solid #f4f4f4;
}
.order-product .item{
  height: auto;
  overflow: hidden;
  padding: 30rpx 0;
  display: -webkit-box;
  color: #6c6c6c;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f4f4f4;
  margin: 0 24rpx;
}
.order-product .item:last-child{
  border-bottom:none;
}
.order-product .item image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 24rpx;
}
.order-product .item .info{
  -webkit-box-flex: 1;
  position: relative;
}
.order-product .item .name{
  font-size: 28rpx;
  height: 70rpx;
  line-height: 35rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
}
.order-product .item .sku{
  margin-top: 14rpx;
  font-size: 20rpx;
  display: -webkit-flex;
  display: flex;
  color: #cacaca
}
.order-product .item .sku .type{
  width: 33.33%;
}
.order-product .item .sku .type1{
  width: 50%;
}
.order-product .item .sku .type .color-red,
.order-product .item .sku .type text{
  font-size: 24rpx;
}
.order-product .item .price{
  height: auto;
  overflow: hidden;
  color: #ff2742;
  font-size: 32rpx;
  padding-top: 28rpx;
}
.order-product .item .noStock{
  position: absolute;
  right: 0;
  bottom: 0;
  color: #fd4374;
  font-size: 24rpx;
}
/*提交按妞*/
.order-buy{
  width: 100%;
  height: 96rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1000;
  border-top: 2rpx solid #e5e5e5;
  background: #fff;
}
.order-buy .main{
  position: relative;
}
.order-buy .pay-amount{
  width: 530rpx;
  display: flex;
  justify-content:center;
  height: 96rpx;
  padding-left: 30rpx;
  flex-direction:column;
}
.order-buy .pay-amount .pay-money{
  width: 500rpx;
  color: #000;
  font-size: 28rpx;
}
.order-buy .pay-amount .pay-money text{
  color: #ff2742;
  font-size: 38rpx;
}
.order-buy .pay-amount .discount-money{
  color: #6c6c6c;
  font-size: 28rpx;
}
.order-buy .order-btn{
  position: absolute;
  right: 0;
  top: 0;
  width: 220rpx;
  height: 96rpx;
  text-align: center;
  line-height: 96rpx;
  color: #fff;
  background: #fd4374;
  font-size: 30rpx;
  border-radius: 0;
  margin: 0;
  padding:0;
}
.order-buy1,
.order-buy1 .pay-amount{
  height: 118rpx;
}
.order-buy1 .order-btn{
  height: 118rpx;
  line-height: 118rpx;
}