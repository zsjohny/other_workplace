
/* 物流详情 */
.express-detail{
  width: 690rpx;
  height: auto;
  overflow: hidden;
  margin: 30rpx auto;
}
.product-info{
  display: -webkit-box;
  position: relative;
  padding: 30rpx;
  font-size: 28rpx;
}
.product-info .item{
  padding-bottom: 14rpx;
}
.product-info .img{
  width: 170rpx;
  height: 227rpx;
  display: block;
  margin-right: 24rpx;
}
.product-info .info{
  -webkit-box-flex: 1;
}
.product-info .arrow {
  position:absolute;
  right:30rpx;
  top:90rpx;
  width:18rpx;
  height:30rpx;
  background:url(http://mini-img-main.oss-cn-hangzhou.aliyuncs.com/icon/arrow.png) no-repeat;
  background-size:18rpx;
}
.express-list{
  height: auto;
  overflow: hidden;
  margin: 0 auto;
  padding: 10rpx 30rpx;
  border-top:10rpx solid #E5E5E5;

}
.express-list .item{
  height: auto;
  overflow: hidden;
  margin: 30rpx auto;
  font-size: 24rpx;
}
.express-list .item .title{
  width: 230rpx;
  float: left;
  margin-right: 90rpx;
}
.express-list .item .time{
  width: 370rpx;
  height: auto;
  overflow: hidden;
}
.express-list .item .title1,
.express-list .item .time1{
  font-size: 32rpx;
}

