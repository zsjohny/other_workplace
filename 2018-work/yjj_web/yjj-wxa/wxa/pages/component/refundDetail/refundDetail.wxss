@import '/style/common.wxss';
/**售后详情 **/
page{
  background: #f4f4f4
}
.body-contain{
  padding-bottom: 120rpx;
}
.bt-margin20{
  margin-bottom:20rpx;
}
.bt-border2{
  border-bottom:2rpx solid #f4f4f4;
}
.detail-head{
  min-height: 210rpx;
  color: #fff;
  background: #fd4374;
  position: relative;
  padding: 0 24rpx;
}
.detail-head .state{
  font-size: 32rpx;
  padding-top: 50rpx;
  font-weight: 600;
}
.detail-head .state-content{
  font-size:24rpx;
  overflow: hidden;
  padding-top: 10rpx;
}
.detail-head .hide-content{
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.detail-head .show-content{
  height: auto;
  overflow: hidden;
}
.detail-head .state-progress{
  width: 210rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 24rpx;
  background: #e33c68;
  font-size: 24rpx;
  position: absolute;
  right: 24rpx;
  top: 70rpx;
  text-align: center;
}
.detail-head .box{
  position: relative;
  padding-left: 10rpx;
}
.detail-head .box::before{
  content: '';
  width: 30rpx;
  height: 30rpx;
  background: url(https://yjj-img-main.oss-cn-hangzhou.aliyuncs.com/icon/new/loadding.png) no-repeat;
  background-size: 30rpx;
  position: absolute;
  left: 20rpx;
  top: 9rpx;
}
.detail-head .box::after{
  content: '';
  width: 13rpx;
  height: 22rpx;
  background: url(http://mini-img-main.oss-cn-hangzhou.aliyuncs.com/icon/new/arrow05.png) no-repeat;
  background-size: 13rpx;
  position: absolute;
  right: 20rpx;
  top: 14rpx;
}
.detail-head .more-content{
  height: 40rpx;
  line-height: 40rpx;
  color: #f9f478;
  font-size: 24rpx;
  margin-top: 10rpx;
  text-align: center
}
.detail-head .more-content text{
  position: relative;
}
.detail-head .more-content text::before{
  content: '';
  width: 13rpx;
  height: 22rpx;
  background: url(http://mini-img-main.oss-cn-hangzhou.aliyuncs.com/icon/new/arrow05.png) no-repeat;
  background-size: 13rpx;
  position: absolute;
  right: -20rpx;
  top: 10rpx;
  transform: rotate(90deg);
}
.detail-head .more-content1 text::before{
  transform: rotate(-90deg);
}
/*退款信息*/
.refund-info{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  padding: 0 24rpx;
  background: #fff;
}
.refund-info .l{
  float: left;
}
.refund-info .r{
  float: right;
}
.refund-box{
  padding: 24rpx 24rpx 14rpx;
  background: #fff;
}
.refund-box .title{
  background: #f8f8f8;
  font-size: 26rpx;
  height: 70rpx;
  line-height: 70rpx;
  color: #959595;
  padding: 0 24rpx;
}
.refund-box .item{
  height: auto;
  overflow: hidden;
  color: #6c6c6c;
  font-size: 28rpx;
  border: 2rpx solid #ecebeb;
  margin-bottom: 10rpx;
}
.refund-box .detail{
  line-height: 56rpx;
  color: #9a9a9a;
  font-size: 26rpx;
}
/*退款原因*/
.refund-reason .title{
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 24rpx;
  background: #fff;
  font-size: 30rpx;
}
.refund-reason .content-main{
  padding: 20rpx 24rpx;
}
.refund-reason .content{
  color:#6b6b6b;
  font-size: 26rpx; 
  line-height: 1.5;
  margin-bottom: 24rpx;
  overflow: hidden;
}
.refund-reason .show-content{
  height: auto;
}
.refund-reason .hide-content{
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  display: -webkit-box;
  -webkit-box-orient: vertical;
}
.refund-reason .img-box{
  display: -webkit-flex;
  justify-content: flex-start
}
.refund-reason .img-box .img{
  width: 158rpx;
  height: 158rpx;
  margin-right: 20rpx;
}
.refund-reason .more-btn{
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background: #fff;
  color: #fd4374;
  font-size: 26rpx;
  border-radius: 6rpx;
  margin-top: 24rpx;
}
.contact-btn{
  margin: 0;
  padding: 0;
  border-radius: 0;
  line-height: 100rpx;
  text-align:center;
  color:#fff;
  font-size:30rpx;
  border:none;
}

