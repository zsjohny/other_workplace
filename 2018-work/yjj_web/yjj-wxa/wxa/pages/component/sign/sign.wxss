.signBg{
    width: 750rpx;
    height: 1581rpx;
    background: url("http://mini-img-main.oss-cn-hangzhou.aliyuncs.com/icon/new/sign-bgn.png");
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
}
.signDays{
    width: 750rpx;
    color: #fff;
    font-size: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 400rpx;
    left: 0;
}
.signDayWrap{
    position: relative;
    width: 86rpx;
    height: 86rpx;
    margin: 0 20rpx;
}
.signIcon{
    width: 86rpx;
    height: 86rpx;
}
.signDayNum{
    color: rgb(233,71,22);
    /*color: #000;*/
    font-size: 36rpx;
    width: 86rpx;
    height: 86rpx;
    text-align: center;
    position: absolute;
    top: 17rpx;
    left: 0rpx;
}
.calenderWrap{
    position: absolute;
    top: 530rpx;
    left: 36rpx;
    width: 677rpx;
    /*height: 700rpx;*/
}
.month{
    color: rgb(233,71,22);
    padding-top: 20rpx;
    text-align: center;
    font-size: 30rpx;
}
.week{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx 0 0rpx 0;
    color: rgb(107,107,107);
    margin: 0 10rpx 20rpx 10rpx;
    font-size: 30rpx;
}

.days{
    /*margin: 20rpx 0;*/
    /*padding: 10rpx;*/
}

.columns{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.rows{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.cell{
    width: 60rpx;
    height: 60rpx;
    margin-bottom: 24rpx;
    text-align: center;
    border-radius: 50%;
    display: flex;
    /* flex-direction: column; */
    line-height: 60rpx;
    justify-content: center;
    color: rgb(107,107,107);
    font-size: 30rpx;
    /* background-color: rgb(246,92,29); */
    position: relative;
}
/*已签到*/
.cellSigned{
    width: 60rpx;
    height: 60rpx;
    background-color: rgb(246,92,29);
    color: #fff;
    display: flex;
    justify-content: center;
    border-radius: 50%;
    position: relative;
}
/*未签到*/
.cellUnSign{
    width: 58rpx;
    height: 58rpx;
    border: 1rpx solid rgba(232,70,24,.8);
}
.signTodayWrap{
    position: absolute;
    top: -1rpx;
    left: -1rpx;
}
.signToday{
    width: 62rpx;
    height: 62rpx;

}
.cell:first-child{

    /*border: 1rpx solid rgba(232,70,24,.8);*/
}
.rewardWrap{
    width: 750rpx;
    text-align: center;
    position: absolute;
    top: 1280rpx;
    left: 0;
    font-size: 28rpx;
    color: rgb(83,83,83);
}
.totalWrap{
    display: flex;
    align-items: center;
    justify-content: center;
}
.totalReward{
    color: rgb(221,57,19);
    font-size: 46rpx;
    margin: 0 10rpx;
}
.signBtn{
    width: 510rpx;
    height: 90rpx;
    background: linear-gradient(to bottom right, #ea5012 , #d52c13);
    color: rgb(255,255,255);
    font-size: 32rpx;
    border-radius: 8rpx;
    margin: 28rpx auto 0;
    line-height: 90rpx;
}
.signedBtn{
    width: 510rpx;
    height: 90rpx;
    background: linear-gradient(to bottom right, #ea5012 , #d52c13);
    color: rgb(255,255,255);
    font-size: 32rpx;
    border-radius: 8rpx;
    margin: 28rpx auto 0;
    line-height: 90rpx;
    opacity: .5;
}
/*礼物弹窗*/
.signGiftWrap{
    width: 750rpx;
    height: 100%;
    background-color: rgba(0,0,0,.8);
    position: fixed;
    top: 0;
    left: 0;
    /*z-index: 10;*/
    display: flex;
    align-items: center;
    justify-content: center;
}
.giftWrap{
    width: 640rpx;
    height: 744rpx;
    background-color: #fff;
    padding: 60rpx 30rpx 0rpx 30rpx;
    border-radius: 8rpx;
    text-align: center;
}
.giftImg{
    width: 378rpx;
    height: 358rpx;
}
.giftInfo{
    font-size: 28rpx;
    color: #535353;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 80rpx;
    margin-bottom: 80rpx;
}
.giftReward{
    font-size: 46rpx;
    color: #e43626;
    margin: 0 10rpx;
}
.giftDone{
    width: 588rpx;
    height: 88rpx;
    font-size: 30rpx;
    color: #e53826;
    border-radius: 8rpx;
    background-color: #fff;
    border: 2rpx solid #e53826;
    line-height: 88rpx;
    margin: 0 auto;
}
