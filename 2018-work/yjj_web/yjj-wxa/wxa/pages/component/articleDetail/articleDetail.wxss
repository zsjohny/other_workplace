/* 文章详情 */
.article-detail{
  width: 702rpx;
  height: auto;
  overflow: hidden;
  margin: 30rpx auto;
}
.article-detail .title{
  font-size: 40rpx;
  max-height:100rpx;
  color: #666;
  overflow: hidden;
  line-height: 50rpx;
}
.content-box{
  padding: 30rpx 0 24rpx 0;
  font-size: 30rpx;
  color: #737373;
  line-height: 1.5;
}
.content-box .img{
  width: 702rpx;
  padding: 24rpx 0;
  display: block
}
.content-box .link{
  color: #08c;
  display: inline;
}