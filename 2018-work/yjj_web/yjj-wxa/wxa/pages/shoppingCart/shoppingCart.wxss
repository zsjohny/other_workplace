/**购物车**/
.cart-list{
  height: auto;
  overflow: hidden;
  padding-bottom: 120rpx;
}
.cart-list .item{
  background: #f8f8f8;
  padding: 20rpx 20rpx 20rpx 0;
  position: relative;
  font-size: 26rpx;
  height: auto;
  overflow: hidden;
  margin-top: 20rpx;
}
.cart-list .item .choose-box{
  width: 82rpx;
  min-height: 190rpx;
  position: relative;
  float: left;
}
.cart-list .item .choose-box .icon{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  left: 20rpx;
  top: 50%;
  margin-top: -20rpx;
}
.cart-list .item .choose-box .icon1{
  background: #fff;
  border:2rpx solid #c6c6c6;
  width: 38rpx;
  height: 38rpx;
}
.cart-list .item .img,
.cart-list .item .info{
  float: left;
}
.cart-list .item .img{
  width: 144rpx;
  height: 190rpx;
  margin-right: 20rpx;
  position: relative
}
.cart-list .item .img image{
  width: 144rpx;
  height: 144rpx;
}
.cart-list .item .img .soldOut-status{
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
  color: #fff;
  text-align: center;
  font-size: 24rpx;
  position: absolute;
  left: 0;
  top: 0;
  box-sizing: border-box;
  padding-top: 60rpx;
}
/*商品信息*/
.cart-list .item .info{
  position: relative;
  height: 190rpx;
}
.cart-list .info-head .title{
  width: 410rpx;
  height: 68rpx;
  line-height: 34rpx;
  overflow: hidden;
  margin-bottom: 14rpx;
}
.cart-list .format text{
  color: #828282;
  font-size: 22rpx;
}
.cart-list .format .size{
  margin-left: 20rpx;
}
.cart-list .format .cloth-number{
  width: 410rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  word-wrap:break-word;
}
.cart-list .price-box{
  color: #ff2742;
  font-size: 26rpx;
  position: absolute;
  left: 0;
  bottom: -2px;
}
.cart-list .cart-number{
  position: absolute;
  right: 20rpx;
  bottom: 14rpx;
  z-index: 10;
  height: 44rpx;
  line-height: 44rpx;
}
.cart-list .cart-number .number-box,
.cart-list .cart-number .number-title{
  float: left;
}
.cart-list .cart-number .ac-item{
  float: left;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  width: 44rpx;
  background: #e4e4e4
}
.cart-list .cart-number .ac-item1{
  background: #f2f2f2;
}
.cart-list .cart-number .num-item{
  width: 86rpx;
  margin: 0 4rpx;
}
.cart-list .delete-box{
  width: 60rpx;
  height: 40rpx;
  position: absolute;
  top: 20rpx;
  right: 0;
}
.cart-list .delete-box .icon{
  width: 22rpx;
  height: 24rpx;
  margin: 8rpx 19rpx;
  background: url(https://yjj-img-www.oss-cn-hangzhou.aliyuncs.com/15245549457091524554945709.png) no-repeat;
  background-size: 22rpx;
}
.cart-list .item .noStock{
  position: absolute;
  right: 20rpx;
  bottom: 98rpx;
  color: #fd4374;
  font-size: 24rpx;
}
/**全选浮动条**/
.carts-bar{
  width: 100%;
  height: 90rpx;
  padding-left: 20rpx;
  font-size: 28rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 1000;
  border-top: 2rpx solid #cbcbcb;
  background: #fff;
}
.carts-bar .select-all{
  width: 150rpx;
  height: 90rpx;
  line-height: 90rpx;
  position: relative;
}
.carts-bar .select-all .select-icon{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 22rpx;
}
.carts-bar .select-all .select-icon1{
  background: #fff;
  border:2rpx solid #c6c6c6;
  width: 38rpx;
  height: 38rpx;
}
.carts-bar .select-all .text{
  position: absolute;
  height: 40rpx;
  line-height: 40rpx;
  left: 60rpx;
  top: 26rpx;
}
.carts-bar .total-price{
  padding: 8rpx 0;
  font-size: 22rpx;
  color: #666;
  position: absolute;
  right: 200rpx;
  top: 0;
  text-align: right;
}
.carts-bar .total-price text{
  font-size: 30rpx;
}
.carts-bar .balance-btn{
  height: 94rpx;
  width: 180rpx;
  background: #ff2742;
  line-height: 94rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  right: 0;
  top: -2rpx;
}
/**无商品时**/
.no-product{
  width: 500rpx;
  height: 400rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 100;
  margin: -320rpx -250rpx;
  text-align: center;
  color: #828282;
}
.no-product .icon{
  width: 308rpx;
  height: 308rpx;
  background: url(http://mini-img-main.oss-cn-hangzhou.aliyuncs.com/icon/new/no-shopcar-icon.png) no-repeat;
  background-size: 308rpx 308rpx;
  margin: 0 auto;
}
.no-product .text{
  margin-top: 50rpx;
  line-height: 1.8;
  font-size: 30rpx;
}