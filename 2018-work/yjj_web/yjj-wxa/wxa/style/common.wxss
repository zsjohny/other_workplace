/**订单、售后等相关详情页面商品信息的共用样式**/
.product-item{
  height: auto;
  overflow: hidden;
  padding: 20rpx 24rpx;
  display: -webkit-box;
  color: #6c6c6c;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}
.product-item image{
  width: 180rpx;
  height: 180rpx;
  margin-right: 24rpx;
  display: block;
}
.product-item .info{
  -webkit-box-flex: 1;
  position: relative;
}
.product-item .name{
  font-size: 28rpx;
  height: 70rpx;
  line-height: 35rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  color: #333;
}
.product-item .sku{
  margin-top: 24rpx;
  font-size: 20rpx;
  display: -webkit-flex;
  display: flex;
  color: #cacaca
}
.product-item .sku .type{
  width: 30%;
}
.product-item .sku .type1{
  width:40%;
}
.product-item .sku .type3{
  text-align: right
}
.product-item .sku .type .color-red,
.product-item .sku .type text{
  font-size: 24rpx;
}
/**页面常用操作小按钮的通用样式**/
.com-min-btn{
  line-height: 64rpx;
  text-align: center;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: 2rpx solid #fd4374;
  color: #fd4374;
  background: #fff; 
  padding: 0 24rpx; 
}
.com-gray-btn1{
  border: 2rpx solid #bfbfbf;
  color: #848484;
}
.com-gray-btn2{
  border: 2rpx solid #cacaca;
  color: #cacaca;
}
/**页面固定在底部的大按钮通用样式**/
.com-fixed-btn{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  display: -webkit-box;
  z-index: 9999;
}
.com-fixed-btn .btn-item{
  -webkit-box-flex: 1
}
.com-fixed-btn .wd33{
  width: 33.33%;
}
.com-fixed-btn .wd50{
  width: 50%;
}
.com-fixed-btn .btn-item{
  -webkit-box-flex: 1
}
.com-red-bg{
  background: #fd4374!important;
}
.com-red-bg1{
  background: #feb4c7!important
}
.com-gray-bg{
  background: #cacaca!important
}
