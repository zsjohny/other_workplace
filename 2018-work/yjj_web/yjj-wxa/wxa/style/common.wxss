}
.check-box .code-explain{
  font-size: 30rpx;
  padding: 25rpx 0;
}
.check-box .explain{
  width: 380rpx;
  line-height: 1.5;
  color: #ff2742;
  font-size: 28rpx;
  margin: 0 auto;
}
.check-box .explain .ct{
  padding-top: 0;
}
.check-box .prompt{
  color: #ff2742;
  height: auto;
  overflow: hidden;
  text-align: center;
  padding: 20rpx 0;
