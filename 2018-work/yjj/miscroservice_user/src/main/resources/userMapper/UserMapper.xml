<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.e_commerce.miscroservice.user.mapper.UserMapper">

    <resultMap id="BaseUserResult" type="com.e_commerce.miscroservice.user.po.UserPO">
        <id column="user_id" property="user_id"/>
        <result column="type_id" property="typeId"/>
    </resultMap>


    <!-- 更加电话号码获取用户信息 -->
    <select id="findUserOneByUserPhone" parameterType="java.lang.String" resultMap="BaseUserResult">
        select * from user where phone = #{userPhone} OR username = #{userPhone} limit 1
    </select>

    <insert id="addUserLoginLog" parameterType="com.e_commerce.miscroservice.commons.entity.user.UserLoginLog">
		<![CDATA[
			INSERT INTO store_UserLoginLog
              ( BusinessId, Ip, ClientType, ClientVersion, CreateTime)
            VALUES	(#{businessId}, #{ip}, #{clientType}, #{clientVersion}, #{createTime})
		]]>
    </insert>
</mapper>











